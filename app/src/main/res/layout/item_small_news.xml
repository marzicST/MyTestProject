<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/indicator"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/item_small_news_iv_foto"
            android:background="#464444"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_small_news_iv_foto"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentEnd="true"/>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/item_small_news_ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:orientation="vertical"
            android:layout_alignTop="@+id/indicator">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_small_news_tv_race_type"
                tools:text="fsdfdsfdsfdfdkfkfls;f"
                android:layout_width="match_parent"
                android:maxWidth="220dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="14sp"
                android:textColor="#2196F3"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                tools:text="Layout constraints in a given ConstraintLayout or RelativeLayout should reference other views within the same relative layout (but not itself!) Layout constraints in a given ConstraintLayout or RelativeLayout should reference other views within the same relative layout (but not itself!) "
                android:layout_width="match_parent"
                android:maxWidth="220dp"
                android:textSize="13sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_small_news_tv_date"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxWidth="100dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            tools:text="fdsfdfdssdfdfd"
            android:layout_below="@+id/item_small_news_ll_title"/>

    <ImageView
            android:id="@+id/item_small_news_iv_favorites"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_alignEnd="@+id/item_small_news_ll_title"
            android:src="@drawable/ic_news_add_to_favorite_small"
            android:layout_below="@+id/item_small_news_ll_title"/>

    <ImageView
            android:id="@+id/item_small_news_lv_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/item_small_news_iv_favorites"
            android:src="@drawable/ic_news_share_small"
            android:layout_below="@+id/item_small_news_ll_title"/>

</RelativeLayout>