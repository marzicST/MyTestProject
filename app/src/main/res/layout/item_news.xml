<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            tools:text="Гран Прі Франції: путівник треком разом із Esso Synergy"

            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="200dp"
            android:layout_below="@+id/title"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            tools:text="Формула 1 прибуває до Французької Рів'єри 21-23 червня на восьмий раунд чемпіонату світу. Після десятирічної перерви Гран Прі Франції повернувся до календаря у 2018 році, коли етап пройшов на знаменитому треку Поль Рікар."
            android:layout_below="@+id/photo"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            tools:text="2019-06-20 17:00:26"
            android:layout_below="@+id/preview"/>

</RelativeLayout>