<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

    <View
            android:id="@+id/indicator"
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/item_small_news_iv_foto"
            android:background="#A09E9E"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_small_news_iv_foto"
            android:layout_width="128dp"
            android:layout_height="88dp"
            android:layout_marginEnd="16dp"
            android:background="#A09E9E"
            android:layout_alignParentEnd="true"/>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/item_small_news_ll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:orientation="vertical"
            android:layout_alignTop="@+id/indicator">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_small_news_tv_race_type"
                android:layout_width="150dp"
                android:background="#A09E9E"
                android:layout_height="wrap_content"
                android:textColor="#2196F3"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="220dp"
                android:layout_marginTop="3dp"
                android:layout_height="38dp"
                android:background="#A09E9E"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_small_news_tv_date"
            android:layout_width="75dp"
            android:layout_height="15dp"
            android:maxLines="1"
            android:layout_marginStart="23dp"
            android:layout_marginTop="13dp"
            android:background="#A09E9E"
            android:layout_below="@+id/item_small_news_ll_title"/>

    <ImageView
            android:id="@+id/item_small_news_iv_favorites"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="#A09E9E"
            android:layout_marginStart="35dp"
            android:layout_marginTop="4dp"
            android:layout_alignEnd="@+id/item_small_news_ll_title"
            android:layout_below="@+id/item_small_news_ll_title"/>

    <ImageView
            android:id="@+id/item_small_news_lv_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:background="#A09E9E"
            android:layout_toStartOf="@+id/item_small_news_iv_favorites"
            android:layout_below="@+id/item_small_news_ll_title"/>

</RelativeLayout>